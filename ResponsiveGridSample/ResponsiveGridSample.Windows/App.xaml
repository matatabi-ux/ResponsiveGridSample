<common:MvpvmAppBase x:Class="ResponsiveGridSample.App"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:common="using:ResponsiveGridSample.Common">

    <common:MvpvmAppBase.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DesignStyles.xaml" />
                <ResourceDictionary Source="Themes/DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Application-specific resources  -->
            <x:String x:Key="AppName">Responsive GridView Sample</x:String>
        </ResourceDictionary>
    </common:MvpvmAppBase.Resources>
</common:MvpvmAppBase>
